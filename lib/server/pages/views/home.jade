extends ../../layouts/layout

prepend styles
  link(href='http://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,600', rel='stylesheet', type='text/css')

block title
  title Listinception - Lists within lists within lists within lists

block content
  #landing-page
    header.landing-header.clearfix
      #logo
        // replace this with a logo desined in photoshop
        h1: a(href="/") Listinception
      - if (typeof user !== "undefined")
        #search
          input(type="text", placeholder="Search ...")

        #current-user-links
          ul
            li
              a(href="/soufell") 
                img(src="https://secure.gravatar.com/avatar/607ec61ea0baecb8a9e25e81447dc0e3?s=140&d=https://a248.e.akamai.net/assets.github.com%2Fimages%2Fgravatars%2Fgravatar-user-420.png")
      - else

        #action-buttons
          ul
            li.features: a(href="/features") Features
            li.signup: a(href="#") Signup
            li.login: a(href="#") Login

    #landing-intro
      h1 List things
      p Lorem ipsum dolor sit amet.

    #login-form.hidden
      h2 Login
      ul.form
        li
          label(for="username") Username:
          input.username-input(type="text")
        li
          label(for="password") Password:
          input.password-input(type="password")
        li
          input.submit.button(type="submit", value="Go")


    #signup-form
      h2 Signup
      ul.form
        li
          label(for="username") Username:
          input.username-input(type="text")
        li
          label(for="password") Password:
          input.password-input(type="password")

        li
          label(for="email") Email:
          input.email-input(type="text")
        li
          input.button(type="submit", value="Go")

